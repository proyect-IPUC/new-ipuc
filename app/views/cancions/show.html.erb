<%- model_class = Cancion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cancion) %>:</strong></dt>
  <dd><%= @cancion.cancion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genero) %>:</strong></dt>
  <dd><%= @cancion.genero %></dd>
  <dt><strong><%= model_class.human_attribute_name(:artista) %>:</strong></dt>
  <dd><%= @cancion.artista %></dd>
  <dt><strong><%= model_class.human_attribute_name(:letra) %>:</strong></dt>
  <dd><%= @cancion.letra %></dd>


</dl>

<div class="form-actions">
  <p><%= link_to 'Generar (PDF)', cancion_path(@cancion, format: 'pdf')%></P> 
  <%= link_to t('.back', :default => t("helpers.links.Atras")),
              cancions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.Editar")),
              edit_cancion_path(@cancion), :class => 'btn btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
              cancion_path(@cancion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.Confirmar", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


