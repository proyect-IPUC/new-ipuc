<%= simple_form_for(@cancion, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>
  <%= f.input :cancion %>
  <%= f.input :genero %>
  <%= f.input :artista %>
  <%= f.input :letra %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.Cancelar")),
                cancions_path, :class => 'btn' %>
  </div>
<% end %>
