<%= simple_form_for @cancion, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :cancion %>
  <%= f.input :genero %>
  <%= f.input :artista %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cancions_path, :class => 'btn' %>
  </div>
<% end %>
