<div class="container">
<%- model_class = Directiva -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:apellido) %></th>
      <th><%= model_class.human_attribute_name(:cargo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @directivas.each do |directiva| %>
      <tr>
        <td><%= link_to directiva.id, directiva_path(directiva) %></td>
        <td><%= directiva.nombre %></td>
        <td><%= directiva.apellido %></td>
        <td><%= directiva.cargo %></td>
        <td><%=l directiva.created_at %></td>
        <td>
	  <%= link_to t('.show', :default => t("helpers.links.show")),
                      directiva_path(directiva), :class => 'btn btn-mini' %>	
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_directiva_path(directiva), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      directiva_path(directiva),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_directiva_path,
            :class => 'btn btn-primary' %>
</div>
