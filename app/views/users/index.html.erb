<h1>Lista de Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Ver', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '!esta accion es irreversibleÂ¡...Esta Seguro de Eliminar Usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

