<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="field">
   	<%= f.label :email %><br />
   	<%= f.text_field :email %>
  </div>
  <div class="field">
 	<%= f.label :password %><br />
 	<%= f.password_field :password %>
  </div>
  <div class="field">
 	<%= f.label :password_confirmation %><br />
 	<%= f.password_field :password_confirmation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>




