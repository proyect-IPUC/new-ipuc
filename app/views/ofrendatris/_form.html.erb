<%= simple_form_for @ofrendatri, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :valor %>
  <%= f.input :trimestre %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ofrendatris_path, :class => 'btn' %>
  </div>
<% end %>
