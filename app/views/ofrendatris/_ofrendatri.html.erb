  <tr id=<%="ofrendatri_#{ofrendatri.id}"%>>
      <tr>
        <td><%= link_to ofrendatri.id, ofrendatri_path(ofrendatri) %></td>
        <td><%= ofrendatri.valor %></td>
        <td><%= ofrendatri.trimestre %></td>
        <td><%=l ofrendatri.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ofrendatri_path(ofrendatri),remote: true, :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ofrendatri_path(ofrendatri),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
   