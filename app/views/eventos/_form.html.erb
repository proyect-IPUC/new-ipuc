<%= simple_form_for(@evento, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>
  <%= f.input :evento %>
  <%= f.input :valor %>
  <%= f.input :dia %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                eventos_path, :class => 'btn' %>
  </div>
<% end %>
