<%= simple_form_for @p_trabajo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombrep_trabajo %>
  <%= f.input :fechap_trabajo %>
  <%= f.input :descriptionp_trabajo %>
  <%= f.input :aprobado? %>
  <%= f.input :observacion %>
  <%= f.input :directiva_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                p_trabajos_path, :class => 'btn' %>
  </div>
<% end %>
