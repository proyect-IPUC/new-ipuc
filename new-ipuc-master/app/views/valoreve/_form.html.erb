<%= simple_form_for @valoreve, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :evento %>
  <%= f.input :valor %>
  <%= f.input :dia %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                valoreve_path, :class => 'btn' %>
  </div>
<% end %>
