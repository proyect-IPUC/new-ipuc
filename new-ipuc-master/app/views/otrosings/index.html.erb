<%- model_class = Otrosing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div id="cont">
        <%= form_tag otrosings_path, :method => 'get' do %>
        <% content_tag :label do %>
        Search term:
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
     <% end %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:actividad) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th><%= model_class.human_attribute_name(:dia) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @otrosings.each do |otrosing| %>
      <tr>
        <td><%= link_to otrosing.id, otrosing_path(otrosing) %></td>
        <td><%= otrosing.actividad %></td>
        <td><%= otrosing.valor %></td>
        <td><%= otrosing.dia %></td>
        <td><%=l otrosing.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_otrosing_path(otrosing), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      otrosing_path(otrosing),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_otrosing_path,
            :class => 'btn btn-primary' %>
<%= will_paginate @otrosing, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Otrosings: <%= @otrosings.count %>
<br>
Valor Recaudado :<%= Otrosing.sum(:valor) %>
