<%- model_class = Ofrendatri -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Ofrenda trimestral' %></h1>
</div>

<div id="cont">
        <%= form_tag ofrendatris_path, :method => 'get' do %>
        <% content_tag :label do %>
        Search term:
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
     <% end %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th><%= model_class.human_attribute_name(:trimestral) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ofrendatris.each do |ofrendatri| %>
      <tr>
        <td><%= link_to ofrendatri.id, ofrendatri_path(ofrendatri) %></td>
        <td><%= ofrendatri.valor %></td>
        <td><%= ofrendatri.dia %></td>
        <td><%=l ofrendatri.created_at %></td>
        <td>


       <div class="progress">
          <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
          <span class="sr-only">40% Complete (success)</span>
    </div>
    </div>
    <div class="progress">
          <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
              <span class="sr-only">20% Complete</span>
    </div>
    </div>
    <div class="progress">
          <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
    <span class="sr-only">60% Complete (warning)</span>
    </div>
    </div>
    <div class="progress">
          <div class="progress-bar progress-bar-danger progress-bar-striped" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
    <span class="sr-only">80% Complete (danger)</span>
  </div>
</div>


          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ofrendatri_path(ofrendatri), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ofrendatri_path(ofrendatri),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ofrendatri_path,
            :class => 'btn btn-primary' %>
<%= will_paginate @ofrendatri, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Ofrendatris: <%= @ofrendatris.count %>
<br>
Valor Recaudado :<%= Ofrendatri.sum(:valor) %>