<%- model_class = Diezsem -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Diezmo semanal' %></h1>
</div>
<div id="cont">
        <%= form_tag diezsems_path, :method => 'get' do %>
        <% content_tag :label do %>
        Search term:
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
     <% end %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th><%= model_class.human_attribute_name(:dia) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @diezsems.each do |diezsem| %>
      <tr>
        <td><%= link_to diezsem.id, diezsem_path(diezsem) %></td>
        <td><%= diezsem.valor %></td>
        <td><%= diezsem.dia %></td>
        <td><%=l diezsem.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_diezsem_path(diezsem), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      diezsem_path(diezsem),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_diezsem_path,
            :class => 'btn btn-primary' %>
            <%= will_paginate @diezsem, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Diezsems: <%= @diezsems.count %>
Valor Recaudado :<%= Diezsem.sum(:valor) %>