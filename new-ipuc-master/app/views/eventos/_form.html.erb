<%= simple_form_for @evento, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :evento %>
  <%= f.input :descripcion %>
  <%= f.input :fecha %>
  <%= f.input :hora_inicio %>
  <%= f.input :hora_final %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                eventos_path, :class => 'btn' %>
  </div>
<% end %>
