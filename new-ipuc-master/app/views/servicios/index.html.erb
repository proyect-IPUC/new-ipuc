<%- model_class = Servicio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div id="cont">
        <%= form_tag servicios_path, :method => 'get' do %>
        <% content_tag :label do %>
        Search term:
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
     <% end %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th><%= model_class.human_attribute_name(:dia_de_pago) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @servicios.each do |servicio| %>
      <tr>
        <td><%= link_to servicio.id, servicio_path(servicio) %></td>
        <td><%= servicio.tipo %></td>
        <td><%= servicio.valor %></td>
        <td><%= servicio.dia_de_pago %></td>
        <td><%=l servicio.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_servicio_path(servicio), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      servicio_path(servicio),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_servicio_path,
            :class => 'btn btn-primary' %>
            <%= will_paginate @servicio, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Servivios: <%= @servicios.count %>

<br>
Valor Recaudado :<%= Servicio.sum(:valor) %>