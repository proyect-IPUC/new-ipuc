<%- model_class = Diezdium -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Diezmo diario' %></h1>
</div>
<div id="cont">
        <%= form_tag diezdia_path, :method => 'get' do %>
        <% content_tag :label do %>
        Search term:
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
     <% end %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th><%= model_class.human_attribute_name(:dia) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @diezdia.each do |diezdium| %>
      <tr>
        <td><%= link_to diezdium.id, diezdium_path(diezdium) %></td>
        <td><%= diezdium.valor %></td>
        <td><%= diezdium.dia %></td>
        <td><%=l diezdium.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_diezdium_path(diezdium), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      diezdium_path(diezdium),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_diezdium_path,
            :class => 'btn btn-primary' %>
            <br>
<%= will_paginate @diezdiums, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>


<br>
Valor Recaudado :<%= Diezdium.sum(:valor) %>