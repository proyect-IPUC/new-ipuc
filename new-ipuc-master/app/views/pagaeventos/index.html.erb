<%- model_class = Pagaevento -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Eventos' %></h1>
</div>
<div id="cont">
        <%= form_tag pagaeventos_path, :method => 'get' do %>
        <% content_tag :label do %>
        Search term:
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :name => nil %>
     <% end %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:evento) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th><%= model_class.human_attribute_name(:dia) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pagaeventos.each do |pagaevento| %>
      <tr>
        <td><%= link_to pagaevento.id, pagaevento_path(pagaevento) %></td>
        <td><%= pagaevento.evento %></td>
        <td><%= pagaevento.valor %></td>
        <td><%= pagaevento.dia %></td>
        <td><%=l pagaevento.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pagaevento_path(pagaevento), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pagaevento_path(pagaevento),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pagaevento_path,
            :class => 'btn btn-primary' %>
<%= will_paginate @pagaevento, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Pagaeventos: <%= @pagaeventos.count %>
<br>
Valor Recaudado :<%= Pagaevento.sum(:valor) %>